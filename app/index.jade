html(lang='en', ng-app='app')
  head
    meta(charset='utf-8')
    title(ng-bind-template='{{pageTitle}}')
    link(rel='stylesheet', href='css/app.css')
    script.
      window.brunch = window.brunch || {};
      window.brunch['server'] = 'localhost';
      window.brunch['auto-reload'] = {
        enabled: true
      };
    script(src='js/vendor.js')

  body.ng-cloak(ng-controller='AppCtrl')

    nav.fixed.top-bar(ng-include="'app/partials/shared/top-bar.jade'")

    main(ng-view)

    script(src='js/app.templates.js')
    script(src='js/app.js')